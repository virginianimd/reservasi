<div class="container text-center h-100 align-items-center" style=height:auto;>
    <div class="d-flex justify-content-center">
        <div class="user_card ">
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <img src="/images/LOGIN.png" width="150" height="150" class="brand_logo" alt="logo">
                </div>
            </div>
            <h2>Reservasi</h2>

            <div class="d-flex justify-content-center">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="field col-lg-offset-43">
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:'form-control' %>
                    </div>

                    <div class="field col-lg-offset-4">
                        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:'form-control' %>
                    </div>
            </div>

            <div class="actions col-lg-offset-4">
                <%= f.submit "Log in", :class =>"btn btn-primary btn-lg btn-block" %>
            </div>

            <% end %>
        </div>
    </div>
</div>