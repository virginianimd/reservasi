<%= render partial: 'structures/navigation' %>  

<p id="notice"><%= notice %></p>

<h1>Tamus</h1>

<table class="table">
  <thead class="thead-dark">
    <tr align="center">
      <th>Kode Booking</th>
      <th>Tanggal</th>
      <th>Nama Tamu</th>
      <th>Jenis Paket</th>
      <th>Nama Aktifitas</th>
      <th>Supplier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tamus.each do |tamu| %>
      <tr>
        <td><%= tamu.kodebooking %></td>
        <td><%= tamu.tglaktifitas %></td>
        <td><%= tamu.namatamu %></td>
        <td><%= tamu.tipepaket.try(:jenispaket)%></td>
        <td><%= tamu.tipepaket.try(:namaaktifitas) %></td>
        <td><%= tamu.tipepaket.try(:supplier_id) %></td>
        <td><%= link_to 'Lihat', tamu, class: 'btn btn-default btn-sm glyphicon glyphicon-menu-hamburger' %></td>
        <td><%= link_to 'Edit', edit_tamu_path(tamu), class: 'btn btn-default btn-sm glyphicon glyphicon-edit' %></td>
        <td><%= link_to 'Hapus', tamu, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm glyphicon glyphicon-remove' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Tambah Tamu', new_tamu_path, class: 'btn btn-info btn-sm' %>
