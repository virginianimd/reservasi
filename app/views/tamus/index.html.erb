<%= render partial: 'structures/navigation' %>  

<p id="notice"><%= notice %></p>

<h1>Tamus</h1>

<table class="table">
  <thead class="thead-dark">
    <tr align="center">
      <th>Kode Booking</th>
      <th>Nama Tamu</th>
      <th>Qty</th>
      <th>Tanggal</th>
      <th>Hotel</th>
      <th>Negara</th>
      <th>Telp</th>
      <th>Email</th>
      <th>Note</th>
      <th>Jenis Paket</th>
      <th>Nama Aktifitas</th>
      <th>Supplier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tamus.each do |tamu| %>
      <tr>
        <td><%= tamu.kodebooking %></td>
        <td><%= tamu.namatamu %></td>
        <td><%= tamu.qty %></td>
        <td><%= tamu.tglaktifitas %></td>
        <td><%= tamu.hotel %></td>
        <td><%= tamu.negara %></td>
        <td><%= tamu.telp %></td>
        <td><%= tamu.email %></td>
        <td><%= tamu.note %></td>
        <td><%= tamu.tipepaket.try(:jenispaket)%></td>
        <td><%= tamu.tipepaket.try(:namaaktifitas) %></td>
        <td><%= tamu.tipepaket.try(:supplier_id) %></td>
        <td><%= link_to 'Show', tamu %></td>
        <td><%= link_to 'Edit', edit_tamu_path(tamu) %></td>
        <td><%= link_to 'Destroy', tamu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tamu', new_tamu_path %>
