  </div>

  <div class="field">
    <%= form.label :Email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :Driver %>
    <%= form.text_field :driver %>
  </div>

  <div class="field">
    <%= form.label :Note %>
    <%= form.text_area :note %>
  </div>

  <div class="field">
    <%= form.label :Supplier %>
    <%= collection_select( :tipepaket, :supplier_id, Tipepaket.all, :id, :supplier_id, {}, { :multiple => false } ) %>
