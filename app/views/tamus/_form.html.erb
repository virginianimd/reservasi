  </div>

  <div class="field">
    <%= form.label :Qty %>
    <%= form.number_field :qty %>
  </div>

  <div class="field">
    <%= form.label :Tanggal %>
    <%= form.date_select :tanggal %>
  </div>

  <div class="field">
    <%= form.label :Hotel %>
    <%= form.text_area :hotel %>
  </div>

  <div class="field">
    <%= form.label :Negara %>
    <%= form.text_field :negara %>
  </div>

  <div class="field">
    <%= form.label :Telp %>
