<%= render partial: 'structures/navigation' %>  

<p id="notice"><%= notice %></p>

<table class="table">
  <thead class="thead-dark">
    <tr align="center">
      <th>No Invoice</th>
      <th>Tanggal</th>
      <th>Payment Due</th>
      <th>Supplier</th>
      <th>Total Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.noinvoice %></td>
        <td><%= invoice.tanggal %></td>
        <td><%= invoice.paymentdue %></td>
        <td><%= invoice.supplier %></td>
        <td><%= invoice.totalamount %></td>
        <td><%= link_to 'Show', invoice, class: 'btn btn-default btn-sm glyphicon glyphicon-menu-hamburger' %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice), class: 'btn btn-default btn-sm glyphicon glyphicon-edit' %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-default btn-sm glyphicon glyphicon-remove' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Tambahkan Invoice', new_invoice_path, class: 'btn btn-info btn-sm' %>
